<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreakyFashion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/63a4805453.js" crossorigin="anonymous" defer></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-custom border-bottom box-shadow mb-3">
            <nav class="row">
                <div>
                    <a class="navbar-brand mr-1 text-light" asp-area="" asp-page="/Index">FreakyFashion</a>
                </div>
                <nav class="navbar navbar-light bg-transparent position-relative-b-l-1">
                    <form class="form-inline text-center" action="/search">
                        <input class="d-inline form-control mr-sm-2 inli text-muted" type="search" name="searchString" placeholder=" Search Product" aria-label="Search">
                        <button class=" d-inline btn-dark text-muted" type="submit">Search</button>
                    </form>
                </nav>
            </nav>

            <nav class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse text-light">

                <div class="collapse navbar-collapse pt-4" id="navbarTex">
                    <ul class="navbar-nav mr-auto nav-fill w-50 ">
                        <li class="nav-item">
                            <a class="nav-link  text-light " asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-light " asp-area="" asp-page="/News">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-light " asp-area="" asp-page="/Sale">Sale</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-light " asp-area="" asp-page="/Dresses">Dresses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link   text-light" asp-area="" asp-page="/Shirts">Shirts</a>
                        </li>
                    </ul>
                    <span><partial name="_LoginPartial" /></span>
                </div>

            </nav>

        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr class="align-content-between" />

    <!-- Footer -->
    <footer class="page-footer font-small  pt-4">

        <!-- Footer Links -->
        <div class="container-fluid text-center text-md-left">
            <div>
                <ul class=" list-inline ">
                    
                    <li class="list-inline-item font-small ml-pr-5"><i class="fas fa-globe-americas"></i><a href="#"></a>  Free shipping & return </li>
                    
                    <li class="list-inline-item font-small pr-5"><i class="fas fa-plane "></i><a href="#"></a> Express shipping</li>
                    
                    <li class="list-inline-item font-small pr-5"><i class="fas fa-shield-alt"></i><a href="#"></a> Safe payment</li>
                    
                    <li class="list-inline-item font-small"><i class="far fa-smile"></i><a href="#"></a> New items</li>
                </ul>
            </div>
            <!-- Grid row -->
            <div class="row">

                <div class="col-md-3 mb-md-0 mb-3">

                    <h5 class="text-uppercase font-small">Shoping</h5>

                    <ul class="list-unstyled">
                        <li class="font-small text-muted">
                            <a href="#!">most wanted</a>
                        </li>
                        <li class="font-small text-muted">
                            <a href="#!">latest arrived </a>
                        </li>
  
                    </ul>
                </div>
 
                <div class="col-md-3 mb-md-0 mb-3">


                    <h5 class="text-uppercase font-small">customer care</h5>

                    <ul class=" navbar-nav mr-10 nav-fill w-50 list-unstyled">

                        <li class="font-small text-muted">
                            <a href="#!">help</a>
                        </li>
                        <li class="font-small text-muted">
                            <a href="#!">return policy</a>
                        </li >
                    </ul>

                </div>

            </div>
            <hr />
            <p class="text-muted "style="text-align:center">&copy; FreakyFashion 2020</p>
        </div>

    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
