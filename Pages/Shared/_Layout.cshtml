<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreakyFashion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/63a4805453.js" crossorigin="anonymous" defer></script>
</head>
<body>
    <header class="h-25">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-custom border-bottom box-shadow mb-3">
            <nav class="container">
                <span>
                        <a class="navbar-brand  text-light" asp-area="" asp-page="/Index">FreakyFashion</a>
                 </span>
                 <div >
                        <nav class="navbar navbar-light bg-transparent">
                            <form class="form-inline">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search Product" aria-label="Search">
                                <button class="btn btn-dark " type="submit">Search</button>
                            </form>
                        </nav>
                </div>
                

                <nav class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse text-light">

                    <div class="collapse navbar-collapse pt-4" id="navbarTex">
                        <ul class="navbar-nav mr-auto ">
                            <li class="nav-item">
                                <a class="nav-link  text-light " asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-light " asp-area="" asp-page="/News">News</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-light " asp-area="" asp-page="/Sale">Sale</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-light " asp-area="" asp-page="/Dresses">Dresses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link   text-light" asp-area="" asp-page="/Shirts">Shirts</a>
                            </li>
                        </ul>
                        <span><partial name="_LoginPartial" /></span>
                    </div>

                </nav>

              </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr class="align-content-between" />

    <footer class="border-top footer  >
        <div >

            <ul style="list-style-type:none; ">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col text-center">
                            <i class="fas fa-globe-americas"></i>
                            <li class="d-inline-flex footer-item">Gratis frakt och returer</li>
                        </div>
                        <div class="col text-center">
                            <i class="fas fa-plane"></i>
                            <li class="d-inline-flex footer-item">Express Frakt</li>
                        </div>
                        <div class="col text-center">
                            <i class="fas fa-shield-alt"></i>
                            <li class="d-inline-flex footer-item">Säkra Betalningar</li>
                        </div>
                        <div class="col text-center">
                            <i class="far fa-smile"></i>
                            <li class="d-inline-flex footer-item">Nyheter Varje Dag</li>
                        </div>
                    </div>
                </div>
            </ul>
        </div>
        <hr />
        <div class="container text-center text-md-left h-25">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-2 mx-2">

                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-2 mb-2">Shopping</h5>

                    <ul class="list-unstyled r">
                        <li>
                            <a href="#!">Most wanted</a>
                        </li>
                        <li>
                            <a href="#!">Latest arrived</a>
                        </li>
                        <li>
                            <a href="#!">Brands</a>
                        </li>
                        <li>
                            <a href="#!">Favorire</a>
                        </li>
                    </ul>

                </div>
                <!-- Grid column -->

                <hr class="clearfix w-25  d-md-none">

                <!-- Grid column -->
                <div class="col-md-2 mx-2">

                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-2 mb-2">Customer Care</h5>

                    <ul class="list-unstyled ">
                        <li>
                            <a href="#!">Help</a>
                        </li>
                        <li>
                            <a href="#!">Return Policy</a>
                        </li>
                        <li>
                            <a href="#!">Privacy policy</a>
                        </li>
                    </ul>
                </div>
            </div>
            <hr />
            <div class="footer-copyright text-center ">
                &copy; FreakyFashion 2020
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
