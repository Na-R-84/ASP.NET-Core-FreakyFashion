@page "{searchString?}"

@model FreakyFashion.CheckOutModel
@{
    ViewData["Title"] = "CheckOut";
}

<h1 class="text-center">CheckOut</h1>

<form method="post" asp-page="Basket" asp-page-handler="update">
    <table border="1">
        <tr>
            <th>      </th>
            <th>Price</th>
            <th>Quantity <input type="submit" value="Update" /></th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in Model.checkOut)
        {
            <tr align="center">

                <td>
                    <div class="row">
                        <div class="col border"><img src="~/images/@item.Product.ImageUrl" width="50" height="50" /></div>
                        <div class="col">
                            <h5>@item.Product.Name</h5>
                            <h6>@item.Product.</h6>
                        </div>
                    </div>
                </td>
                <td>$@item.Product.Price</td>
                <td><input type="number" name="quantities" value="@item.Quantity" min="1" style="width: 50px;" /></td>
                <td>
                    $@(item.Product.Price * item.Quantity)
                </td>
            </tr>
        }
        <tr>
            <td colspan="6" align="right">Total</td>
            <td>$@Model.Total</td>
            <td class="font-weight-lighter">Shipping   100 sek</td>

            <td>$@Model.Total</td>
        </tr>
    </table>

</form>


<h3>Customer Information</h3>
<hr />
<form>
    <div class="form-row">
        <div class="col">
            <label for="inputEmail4">Name</label>
            <input type="text" class="form-control" placeholder="First name">
        </div>
        <div class="col">
            <label for="inputEmail4">Last Name</label>
            <input type="text" class="form-control" placeholder="Last name">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress2">Social Security Number</label>
        <input type="number" class="form-control" id="inputAddress2" placeholder="yyyymmdd-nnnn">
    </div>
    <div class="form-group">
        <label for="inputAddress2">Phone Number</label>
        <input type="number" class="form-control" i placeholder="070-1234564">
    </div>
    <div class="form-group">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
    </div>
    <div class="form-row">
        <div class="col">
            <input type="text" class="form-control" placeholder="Zip Code">
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="City">
        </div>
    </div>
</form>
<button type="submit" class="btn btn-outline-dark ">Check Out</button>


