@page
@model FreakyFashion.Areas.Admin.Pages.Product.NewModel
@{
    ViewData["Title"] = "New product";
}


<h1>New Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ArticleNumber" class="control-label"></label>
                <input asp-for="Product.ArticleNumber" class="form-control" />
                <span asp-validation-for="Product.ArticleNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label>Category</label>
                @*<select multiple asp-for="ViewModel.CategoryId" asp-items="Model.ViewModel.CategoryId">*@
                <select name="Id" asp-items="Model.Catrgory"></select>
                @*<span asp-validation-for="Category" class="text-danger"></span>*@

            </div>
            <div class="form-group">

            <label class="control-label">Categories  </label>
            <select multiple asp-for="Product.categoryProducts" class="form-control"></select>
            <span asp-validation-for="Product.categoryProducts" class="text-danger"></span>
        </div>



            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ImageUrl" class="control-label"></label>
                <input asp-for="Product.ImageUrl" class="form-control" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}







